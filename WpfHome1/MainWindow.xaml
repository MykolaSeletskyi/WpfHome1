                <Button Content="Text-19" Margin="15" FontSize="60"/>
                <Button Content="Text-20" Margin="15" FontSize="60"/>
                <Button Content="Text-21" Margin="15" FontSize="60"/>
            </StackPanel>
        </ScrollViewer>
        <Grid Background="LightGray" DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="+000000000000" Grid.Column="0" HorizontalAlignment="Center"/>
            <Label Content="Name" Grid.Column="1" HorizontalAlignment="Center"/>
        </Grid>
        <Grid DockPanel.Dock="Right" Background="LightSlateGray">
