        </StackPanel>
        </Grid>
            <Grid DockPanel.Dock="Bottom" Background="SlateGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Text-30" Margin="15" FontSize="10" />
            <Button Grid.Column="1" Content="Text-31" Margin="15" FontSize="10" />
            <Button Grid.Column="2" Content="Text-32" Margin="15" FontSize="10" />
            <Button Grid.Column="3" Content="Text-33" Margin="15" FontSize="10" />
            <Button Grid.Column="4" Content="Text-34" Margin="15" FontSize="10" />
        </Grid>
        <Grid MinWidth="300" Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
